<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context =".AttendanceOverviewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/circularProgressBar"
            >
            <com.google.android.material.button.MaterialButton
                android:text="@string/attendanceDetailBtnText"
                android:id="@+id/allAttendanceBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.google.android.material.button.MaterialButton>
<!--            <Spinner-->
<!--                android:id="@+id/button_top"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:backgroundTint="@color/cancelColour"-->
<!--                />-->
        </LinearLayout>

        <TextView
            app:layout_constraintBottom_toBottomOf="@id/circularProgressBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/circularProgressBar"
            android:layout_width="wrap_content"
            android:id="@+id/amntWorkingDaysTV"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="bottom|center"
            android:text="20 working days"
            android:layout_height="wrap_content">
        </TextView>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            app:cpb_background_progressbar_color="#b6bbd8"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false"
            app:layout_constraintBottom_toTopOf="@id/attendanceInfoRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <!--    <Button-->
        <!--        android:id="@+id/button_bottom"-->
        <!--        android:layout_width="0dp"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Bottom"-->
        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/attendanceInfoRow"
            android:weightSum="4"
            >
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/white"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <!-- Card contents -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/onTimeTV"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center"
                    android:text="@string/onTime"
                    android:layout_height="wrap_content">
                </TextView>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/white"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <!-- Card contents -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Late"
                    android:id="@+id/lateTV"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center"
                    android:layout_height="wrap_content">
                </TextView>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/white"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <!-- Card contents -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/onLeave"
                    android:id="@+id/onLeaveTV"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center"
                    android:layout_height="wrap_content">
                </TextView>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="@color/white"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <!-- Card contents -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/absentTV"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/absent"
                    android:layout_gravity="bottom|center"
                    android:layout_height="wrap_content">
                </TextView>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout android:id="@+id/btnLinearLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/attendanceInfoRow"
            >
            <Button android:id="@+id/clockInBtn"
                android:backgroundTint="@color/colorClockInBtn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:text="@string/clockInText"> </Button>

            <Button android:id="@+id/clockOutBtn"
                android:backgroundTint="@color/colorClockOutBtn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:text="@string/clockOutText"> </Button>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>